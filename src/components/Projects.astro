---
export type Project = {
    name: string;
    description: string;
    view?: string;
}


const projects:Project[] = [
    {
        name: "QRU Atelier",
        description: `Authentification, gestion des animaux et intégration Stripe dans une app e-commerce.`,
        view:"https://atelier.qru.pet/",
    },
    {
        name: "Application Point relais",
        description: `Gestion de l'UI et de l'authentification via l'API interne.`,
        view:"https://relais.qru.pet/",
    },
     {
        name: 'Focused Shares',
        description: `Application de partage de vidéos de concentration.`,
        view: 'https://focusedshares.com',
    }
]
---

<div class="my-12">
    <h1 class={"text-rose-600 text-[1.2rem] font-semibold"}>
        Projets
    </h1>
    <div class={"grid grid-cols-1 sm:grid-cols-2 gap-4 md:grid-cols-3"}>
    {projects.map((p)=>(
        <div class={"flex flex-col"}>
        <a href={p.view} class={"text-underline-300 underline decoration-neutral-300 underline-offset-4 focus:decoration-rose-400 focus:outline-offset-6 hover:text-rose-500 transition-colors"} rel="noopener" target={"_blank"}>
            <span>{p.name}</span>
        </a>
        <span class={"block pt-2"}>
            {p.description}
        </span>
        </div>
    ))}
    </div>
</div>

